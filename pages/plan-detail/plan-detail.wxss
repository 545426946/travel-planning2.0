/* 页面容器 */
.container {
  min-height: 100vh;
  background: #F5F7FA;
  padding-bottom: 40rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  font-size: 28rpx;
  color: #999;
}

/* 返回按钮 */
.back-button {
  position: fixed;
  top: 20rpx;
  left: 20rpx;
  z-index: 100;
  background: rgba(0, 0, 0, 0.5);
  color: white;
  padding: 16rpx 32rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
  backdrop-filter: blur(10rpx);
}

/* 头部信息 */
.plan-header {
  position: relative;
  width: 100%;
  height: 500rpx;
  overflow: hidden;
}

.header-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.header-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to bottom, rgba(0,0,0,0.3), rgba(0,0,0,0.7));
  display: flex;
  align-items: flex-end;
  padding: 40rpx;
}

.header-content {
  width: 100%;
  color: white;
}

.plan-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}

.plan-badges {
  display: flex;
  gap: 16rpx;
  margin-bottom: 30rpx;
}

.badge {
  padding: 10rpx 24rpx;
  border-radius: 30rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.ai-badge {
  background: linear-gradient(135deg, #8B5CF6 0%, #7C3AED 100%);
}

.status-badge {
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
}

.plan-meta {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.meta-row {
  display: flex;
  gap: 40rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
}

.meta-item .icon {
  font-size: 28rpx;
}

/* 操作按钮栏 */
.action-bar {
  display: flex;
  gap: 16rpx;
  padding: 30rpx 40rpx;
  background: white;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 20rpx 0;
  background: #F5F7FA;
  border-radius: 16rpx;
  border: none;
  font-size: 24rpx;
  color: #666;
  transition: all 0.3s;
}

.action-btn:active {
  background: #E8ECEF;
  transform: scale(0.95);
}

.action-btn .icon {
  font-size: 36rpx;
}

/* 行程安排 */
.itinerary-section {
  background: white;
  margin: 20rpx 0;
  padding: 40rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

/* 日期选择器 */
.day-selector {
  margin: 0 -40rpx 30rpx;
  padding: 0 40rpx;
}

.day-tabs {
  display: flex;
  gap: 16rpx;
  padding-bottom: 10rpx;
}

.day-tab {
  flex-shrink: 0;
  width: 140rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #F5F7FA;
  border-radius: 16rpx;
  gap: 8rpx;
  transition: all 0.3s;
}

.day-tab.active {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: white;
  transform: scale(1.05);
}

.day-label {
  font-size: 28rpx;
  font-weight: 600;
}

.day-date {
  font-size: 22rpx;
  opacity: 0.8;
}

/* 每日行程 */
.daily-content {
  padding-top: 20rpx;
}

.activities-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.activity-card {
  display: flex;
  gap: 20rpx;
  background: #F8F9FA;
  border-radius: 16rpx;
  padding: 24rpx;
  border-left: 6rpx solid #4A90E2;
}

.activity-time-bar {
  flex-shrink: 0;
  width: 120rpx;
}

.time-label {
  display: inline-block;
  padding: 8rpx 16rpx;
  background: #4A90E2;
  color: white;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.activity-content {
  flex: 1;
}

.activity-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.activity-title {
  flex: 1;
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.5;
}

.activity-price {
  flex-shrink: 0;
  padding: 6rpx 16rpx;
  background: #FFE8E8;
  color: #FF6B6B;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 600;
  margin-left: 16rpx;
}

.activity-location {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #666;
}

.activity-location .icon {
  font-size: 26rpx;
}

/* 原始内容显示 */
.raw-content {
  padding: 30rpx;
  background: #F8F9FA;
  border-radius: 16rpx;
  line-height: 1.8;
  font-size: 28rpx;
  color: #333;
  white-space: pre-wrap;
}

/* 描述区域 */
.description-section {
  background: white;
  margin: 20rpx 0;
  padding: 40rpx;
}

.description-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

/* 信息区域 */
.info-section {
  background: white;
  margin: 20rpx 0;
  padding: 40rpx;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.info-tag {
  padding: 12rpx 28rpx;
  background: #F0F4FF;
  color: #4A90E2;
  border-radius: 30rpx;
  font-size: 26rpx;
}

/* 物流信息 */
.logistics-section {
  background: white;
  margin: 20rpx 0;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.logistics-item {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.logistics-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  padding: 20rpx;
  background: #F8F9FA;
  border-radius: 12rpx;
}

/* 底部操作按钮 */
.bottom-actions {
  display: flex;
  gap: 20rpx;
  padding: 40rpx;
  background: white;
  margin-top: 20rpx;
}

.bottom-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  border: none;
  font-size: 30rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}

.primary-btn {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: white;
}

.secondary-btn {
  background: #F5F7FA;
  color: #666;
  border: 2rpx solid #E0E0E0;
}
