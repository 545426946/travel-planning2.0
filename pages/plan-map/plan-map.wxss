/* 地图页面样式 - 优化版本 */

.container {
  width: 100%;
  height: 100vh;
  position: relative;
  overflow: hidden;
  background: #f5f7fa;
}

.map {
  width: 100%;
  height: 100%;
}

/* ========== 加载状态 ========== */
.loading {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(255,255,255,0.96);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.loading-box {
  text-align: center;
  padding: 40px;
}

.spinner {
  width: 44px;
  height: 44px;
  border: 4px solid #f0f0f0;
  border-top-color: #4facfe;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin: 0 auto 20px;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  display: block;
  font-size: 16px;
  color: #333;
  font-weight: 500;
  margin-bottom: 8px;
}

.loading-progress {
  display: block;
  font-size: 13px;
  color: #4facfe;
  background: linear-gradient(135deg, #e8f4ff 0%, #f0f8ff 100%);
  padding: 6px 16px;
  border-radius: 16px;
  margin-top: 12px;
}

/* ========== 顶部信息栏 ========== */
.top-bar {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  padding: 50px 16px 16px;
  background: linear-gradient(to bottom, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0.3) 70%, transparent 100%);
  display: flex;
  align-items: flex-start;
}

.back-btn {
  width: 40px;
  height: 40px;
  background: rgba(255,255,255,0.95);
  border-radius: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  box-shadow: 0 2px 8px rgba(0,0,0,0.15);
}

.back-icon {
  font-size: 20px;
  color: #333;
  font-weight: bold;
}

.title-box {
  flex: 1;
  margin-left: 14px;
  padding-top: 2px;
}

.title {
  font-size: 18px;
  font-weight: 600;
  color: #fff;
  display: block;
  text-shadow: 0 1px 4px rgba(0,0,0,0.5);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.subtitle {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  margin-top: 6px;
}

.subtitle-item {
  font-size: 11px;
  color: rgba(255,255,255,0.95);
  background: rgba(255,255,255,0.2);
  padding: 3px 8px;
  border-radius: 10px;
  text-shadow: 0 1px 2px rgba(0,0,0,0.3);
}

/* ========== 右侧工具栏 ========== */
.toolbar {
  position: absolute;
  top: 120px;
  right: 12px;
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.tool-btn {
  width: 46px;
  height: 46px;
  background: rgba(255,255,255,0.98);
  border-radius: 23px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 3px 12px rgba(0,0,0,0.12);
}

.tool-icon {
  font-size: 20px;
}

/* ========== 底部面板 ========== */
.bottom-panel {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 24px 24px 0 0;
  box-shadow: 0 -4px 20px rgba(0,0,0,0.12);
  transition: max-height 0.3s ease;
  overflow: hidden;
}

.bottom-panel.expanded {
  max-height: 55vh;
}

.bottom-panel.collapsed {
  max-height: 70px;
}

.panel-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 18px 20px;
  border-bottom: 1px solid #f0f0f0;
  background: #fff;
}

.panel-header-left {
  display: flex;
  flex-direction: column;
}

.panel-title {
  font-size: 16px;
  font-weight: 600;
  color: #333;
}

.panel-count {
  font-size: 12px;
  color: #999;
  margin-top: 2px;
}

.panel-toggle-btn {
  width: 36px;
  height: 36px;
  background: #f5f7fa;
  border-radius: 18px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.toggle-icon {
  font-size: 12px;
  color: #666;
}

/* ========== 景点滚动区域 ========== */
.attraction-scroll {
  max-height: calc(55vh - 70px);
  padding: 0 16px 20px;
}

/* ========== 空状态 ========== */
.empty-state {
  text-align: center;
  padding: 50px 20px;
}

.empty-icon {
  font-size: 56px;
  display: block;
  margin-bottom: 16px;
}

.empty-title {
  font-size: 17px;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8px;
}

.empty-desc {
  font-size: 13px;
  color: #999;
  display: block;
  margin-bottom: 24px;
}

.empty-actions {
  display: flex;
  gap: 12px;
  justify-content: center;
}

.action-btn-empty {
  font-size: 13px;
  padding: 12px 20px;
  border-radius: 22px;
  background: #f5f5f5;
  color: #666;
  border: none;
}

.action-btn-empty.primary {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: #fff;
}

/* ========== 时间线样式 ========== */
.timeline {
  padding: 16px 0;
}

.timeline-item {
  display: flex;
  position: relative;
  margin-bottom: 0;
}

.timeline-item.active .timeline-card {
  border-color: #4facfe;
  box-shadow: 0 4px 16px rgba(79, 172, 254, 0.25);
}

.timeline-left {
  width: 50px;
  display: flex;
  flex-direction: column;
  align-items: center;
  flex-shrink: 0;
}

.timeline-number {
  width: 32px;
  height: 32px;
  border-radius: 16px;
  color: #fff;
  font-size: 14px;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2px 8px rgba(0,0,0,0.15);
  z-index: 1;
}

.timeline-line {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 8px 0;
  min-height: 40px;
}

.line-solid {
  width: 2px;
  flex: 1;
  background: linear-gradient(to bottom, #4facfe, #00f2fe);
  border-radius: 1px;
  min-height: 20px;
}

.line-distance {
  font-size: 9px;
  color: #4facfe;
  background: #f0f8ff;
  padding: 2px 6px;
  border-radius: 8px;
  margin: 4px 0;
  white-space: nowrap;
}

/* ========== 景点卡片 ========== */
.timeline-card {
  flex: 1;
  background: #fff;
  border: 1px solid #f0f0f0;
  border-radius: 16px;
  padding: 14px;
  margin-bottom: 12px;
  margin-left: 8px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.04);
  position: relative;
  transition: all 0.2s ease;
}

.card-header {
  margin-bottom: 10px;
}

.card-title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 6px;
}

.card-name {
  font-size: 15px;
  font-weight: 600;
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.card-source {
  font-size: 14px;
  margin-left: 8px;
}

.card-location {
  display: flex;
  align-items: flex-start;
  gap: 4px;
}

.location-icon {
  font-size: 12px;
  flex-shrink: 0;
}

.location-text {
  font-size: 12px;
  color: #666;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 10px;
  border-top: 1px dashed #f0f0f0;
}

.card-coords {
  flex: 1;
}

.coords-text {
  font-size: 10px;
  color: #bbb;
  font-family: monospace;
}

.card-actions {
  display: flex;
  gap: 8px;
}

.card-btn {
  font-size: 11px;
  color: #4facfe;
  padding: 5px 12px;
  background: #f0f8ff;
  border-radius: 12px;
}

.card-btn.nav {
  color: #fff;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

/* 卡片控制按钮 */
.card-controls {
  position: absolute;
  top: 10px;
  right: 10px;
  display: flex;
  gap: 4px;
  opacity: 0.6;
}

.control-btn {
  width: 22px;
  height: 22px;
  font-size: 12px;
  color: #666;
  background: #f5f5f5;
  border-radius: 11px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.control-btn.disabled {
  color: #ccc;
  background: #fafafa;
}

.control-btn.delete {
  color: #ff6b6b;
  background: #fff0f0;
}

/* ========== 底部统计和操作 ========== */
.list-footer {
  padding: 16px 0;
  border-top: 1px solid #f0f0f0;
  margin-top: 8px;
}

.footer-stats {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 16px;
  background: linear-gradient(135deg, #f8fafc 0%, #f0f4f8 100%);
  border-radius: 16px;
  margin-bottom: 16px;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 20px;
}

.stat-value {
  font-size: 20px;
  font-weight: 700;
  color: #333;
}

.stat-label {
  font-size: 11px;
  color: #999;
  margin-top: 2px;
}

.stat-divider {
  width: 1px;
  height: 30px;
  background: #e0e0e0;
}

.footer-actions {
  display: flex;
  gap: 10px;
}

.footer-btn {
  flex: 1;
  font-size: 12px;
  padding: 10px 0;
  border-radius: 20px;
  background: #f5f7fa;
  color: #666;
  border: none;
}

/* ========== 详情弹窗 ========== */
.detail-modal, .debug-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 200;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
}

.modal-content, .debug-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  border-radius: 24px 24px 0 0;
  animation: slideUp 0.3s ease;
  overflow: hidden;
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

.modal-header, .debug-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px;
  border-bottom: 1px solid #f0f0f0;
}

.modal-title-row {
  display: flex;
  align-items: center;
  gap: 12px;
}

.modal-number {
  width: 36px;
  height: 36px;
  border-radius: 18px;
  color: #fff;
  font-size: 16px;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-title, .debug-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
}

.modal-close {
  width: 32px;
  height: 32px;
  border-radius: 16px;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
  color: #999;
}

.modal-body {
  padding: 20px;
}

.info-section {
  background: #f8fafc;
  border-radius: 16px;
  padding: 4px 0;
}

.info-row {
  display: flex;
  align-items: flex-start;
  padding: 14px 16px;
  border-bottom: 1px solid #f0f0f0;
}

.info-row:last-child {
  border-bottom: none;
}

.info-icon {
  font-size: 18px;
  margin-right: 12px;
  flex-shrink: 0;
}

.info-content {
  flex: 1;
}

.info-label {
  font-size: 11px;
  color: #999;
  display: block;
  margin-bottom: 4px;
}

.info-value {
  font-size: 14px;
  color: #333;
  line-height: 1.5;
}

.info-value.highlight {
  color: #4facfe;
  font-weight: 600;
}

.source-tag {
  display: inline-block;
  font-size: 12px;
  padding: 4px 10px;
  border-radius: 12px;
}

.source-tag.local {
  background: #f6ffed;
  color: #52c41a;
}

.source-tag.api {
  background: #e6f7ff;
  color: #1890ff;
}

.modal-footer {
  display: flex;
  gap: 12px;
  padding: 16px 20px 34px;
  border-top: 1px solid #f0f0f0;
}

.modal-btn {
  flex: 1;
  height: 48px;
  border-radius: 24px;
  font-size: 15px;
  background: #f5f5f5;
  color: #666;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6px;
}

.modal-btn.primary {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: #fff;
}

.modal-btn.checkin {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
  color: #fff;
}

.btn-icon {
  font-size: 18px;
}

/* ========== 调试面板 ========== */
.debug-content {
  max-height: 70vh;
  display: flex;
  flex-direction: column;
}

.debug-scroll {
  flex: 1;
  padding: 16px 20px;
  max-height: calc(70vh - 140px);
}

.debug-section {
  margin-bottom: 20px;
}

.section-label {
  font-size: 13px;
  font-weight: 600;
  color: #4facfe;
  display: block;
  margin-bottom: 10px;
}

.debug-item {
  padding: 8px 12px;
  background: #f8fafc;
  border-radius: 8px;
  margin-bottom: 6px;
  font-size: 13px;
  color: #666;
}

.debug-item.success {
  background: #f6ffed;
  color: #52c41a;
}

.debug-item.fail {
  background: #fff2f0;
  color: #ff4d4f;
}

.debug-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.debug-tag {
  background: #f0f8ff;
  color: #4facfe;
  padding: 6px 12px;
  border-radius: 14px;
  font-size: 12px;
}

.debug-empty {
  font-size: 13px;
  color: #999;
}

.debug-text-box {
  background: #f8fafc;
  border-radius: 12px;
  padding: 14px;
  max-height: 150px;
  overflow-y: auto;
}

.debug-text-box text {
  font-size: 11px;
  color: #666;
  line-height: 1.7;
  word-break: break-all;
}

.debug-footer {
  display: flex;
  gap: 12px;
  padding: 14px 20px 30px;
  border-top: 1px solid #f0f0f0;
}

.debug-btn {
  flex: 1;
  height: 42px;
  border-radius: 21px;
  font-size: 13px;
  background: #f5f5f5;
  color: #666;
  border: none;
}

.debug-btn.primary {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: #fff;
}

/* ========== 浮动调试按钮 ========== */
.float-debug-btn {
  position: fixed;
  right: 16px;
  bottom: 60vh;
  width: 44px;
  height: 44px;
  background: rgba(255,255,255,0.95);
  border-radius: 22px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
  box-shadow: 0 3px 12px rgba(0,0,0,0.15);
  z-index: 50;
}

/* ========== 响应式适配 ========== */
@media (max-width: 375px) {
  .top-bar {
    padding-top: 46px;
  }
  
  .toolbar {
    top: 110px;
  }
  
  .tool-btn {
    width: 42px;
    height: 42px;
  }
  
  .bottom-panel.expanded {
    max-height: 50vh;
  }
  
  .timeline-number {
    width: 28px;
    height: 28px;
    font-size: 12px;
  }
  
  .timeline-left {
    width: 44px;
  }
}
