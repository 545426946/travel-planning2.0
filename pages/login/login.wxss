/* pages/login/login.wxss */

page {
  height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

.container {
  position: relative;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 0 40rpx;
}

/* 顶部装饰 */
.header-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 300rpx;
  overflow: hidden;
  z-index: 1;
}

.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  animation: float 6s ease-in-out infinite;
}

.circle-1 {
  width: 200rpx;
  height: 200rpx;
  top: -100rpx;
  left: -50rpx;
  animation-delay: 0s;
}

.circle-2 {
  width: 150rpx;
  height: 150rpx;
  top: -50rpx;
  right: -30rpx;
  animation-delay: 2s;
}

@keyframes float {
  0%, 100% { transform: translateY(0rpx); }
  50% { transform: translateY(-20rpx); }
}

/* 主要内容区域 */
.main-content {
  flex: 1;
  position: relative;
  z-index: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 100rpx 0;
}

/* Logo 区域 */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
  border-radius: 40rpx;
  background: rgba(255, 255, 255, 0.2);
  padding: 20rpx;
}

.app-name {
  font-size: 56rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 15rpx;
  letter-spacing: 2rpx;
}

.app-slogan {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: center;
  line-height: 1.4;
}

/* 登录方式切换 */
.login-type-switch {
  display: flex;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50rpx;
  padding: 8rpx;
  margin-bottom: 60rpx;
  backdrop-filter: blur(10rpx);
}

.switch-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
  border-radius: 42rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.switch-item.active {
  background: rgba(255, 255, 255, 0.9);
  box-shadow: 0 8rpx 25rpx rgba(0, 0, 0, 0.15);
}

.switch-item text {
  font-size: 28rpx;
  font-weight: 500;
  transition: color 0.3s ease;
}

.switch-item.active text {
  color: #667eea;
}

.switch-item:not(.active) text {
  color: rgba(255, 255, 255, 0.9);
}

.switch-icon {
  margin-right: 12rpx;
  font-size: 32rpx;
}

/* 表单样式 */
.login-form {
  margin-bottom: 40rpx;
}

.form-group {
  margin-bottom: 40rpx;
}

.input-wrapper {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 25rpx;
  padding: 0 30rpx;
  height: 100rpx;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.input-wrapper.error {
  border-color: #ff6b6b;
  background: rgba(255, 107, 107, 0.1);
}

.input-wrapper:focus-within {
  border-color: #667eea;
  box-shadow: 0 0 20rpx rgba(102, 126, 234, 0.2);
}

.input-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  color: #667eea;
}

.form-input {
  flex: 1;
  font-size: 30rpx;
  color: #2c3e50;
  height: 100%;
}

.password-toggle {
  font-size: 32rpx;
  color: #667eea;
  padding: 10rpx;
  cursor: pointer;
  opacity: 0.7;
  transition: opacity 0.3s ease;
}

.password-toggle:active {
  opacity: 1;
}

.error-text {
  font-size: 24rpx;
  color: #ff6b6b;
  margin-top: 10rpx;
  margin-left: 30rpx;
}

/* 表单选项 */
.form-options {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 50rpx;
}

.remember-me {
  display: flex;
  align-items: center;
  cursor: pointer;
}

.checkbox {
  width: 32rpx;
  height: 32rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.8);
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 15rpx;
  transition: all 0.3s ease;
}

.checkbox.checked {
  background: #667eea;
  border-color: #667eea;
}

.checkbox.checked text {
  color: white;
  font-size: 20rpx;
  font-weight: bold;
}

.remember-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

.forgot-password {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  text-decoration: underline;
  cursor: pointer;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 100rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  margin-bottom: 30rpx;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-btn::after {
  display: none;
}

.account-btn {
  background: linear-gradient(45deg, #667eea, #764ba2);
  color: white;
  box-shadow: 0 10rpx 25rpx rgba(102, 126, 234, 0.3);
}

.account-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 5rpx 15rpx rgba(102, 126, 234, 0.3);
}

.wechat-btn {
  background: #07c160;
  color: white;
  box-shadow: 0 10rpx 25rpx rgba(7, 193, 96, 0.3);
}

.wechat-btn.primary {
  background: #07c160;
  font-weight: bold;
  font-size: 32rpx;
}

.wechat-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 5rpx 15rpx rgba(7, 193, 96, 0.3);
}

.wechat-btn.secondary {
  background: rgba(7, 193, 96, 0.7);
  margin-top: 20rpx;
  font-size: 28rpx;
}

.wechat-btn.secondary:active {
  transform: translateY(2rpx);
  box-shadow: 0 5rpx 15rpx rgba(7, 193, 96, 0.2);
}

.wechat-logo {
  margin-right: 15rpx;
  font-size: 32rpx;
}

/* 注册链接 */
.register-link {
  text-align: center;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

.register-text {
  color: #ffd700;
  text-decoration: underline;
  margin-left: 10rpx;
  cursor: pointer;
  font-weight: 500;
}

/* 微信登录区域 */
.wechat-login {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.wechat-tips {
  display: flex;
  align-items: center;
  background: rgba(7, 193, 96, 0.1);
  border-radius: 20rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 40rpx;
}

.tips-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.tips-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

.wechat-desc {
  text-align: center;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  line-height: 1.5;
  margin-top: 30rpx;
}

.auth-hint {
  display: block;
  color: #ffd700;
  font-size: 22rpx;
  margin-bottom: 10rpx;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 0.7; }
  50% { opacity: 1; }
}

.link-text {
  color: #ffd700;
  text-decoration: underline;
  cursor: pointer;
}

/* 其他登录方式 */
.other-login {
  margin-top: 60rpx;
}

.divider {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.divider-line {
  flex: 1;
  height: 1rpx;
  background: rgba(255, 255, 255, 0.3);
}

.divider-text {
  margin: 0 30rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

.other-login-options {
  display: flex;
  justify-content: space-around;
}

.other-login-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.other-login-item:active {
  transform: scale(0.95);
}

.other-login-icon {
  font-size: 40rpx;
  margin-bottom: 15rpx;
  opacity: 0.8;
}

.other-login-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 底部装饰 */
.footer-decoration {
  position: relative;
  z-index: 2;
  padding: 40rpx 0;
  text-align: center;
}

.footer-text {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* 加载状态 */
.login-btn[disabled] {
  opacity: 0.7;
  cursor: not-allowed;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .container {
    padding: 0 30rpx;
  }
  
  .app-name {
    font-size: 48rpx;
  }
  
  .app-slogan {
    font-size: 26rpx;
  }
  
  .login-btn {
    height: 88rpx;
    font-size: 30rpx;
  }
}