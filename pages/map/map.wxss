/* 足迹地图主页样式 */

.container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f7fa;
}

/* 加载状态 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(255,255,255,0.9);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.loading-spinner {
  width: 36px;
  height: 36px;
  border: 3px solid #eee;
  border-top-color: #4facfe;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 12px;
  font-size: 14px;
  color: #666;
}

/* 统计卡片 */
.stats-card {
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  padding: 20px 16px;
  margin: 12px;
  border-radius: 16px;
  box-shadow: 0 4px 12px rgba(79, 172, 254, 0.3);
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stats-num {
  font-size: 28px;
  font-weight: 700;
  color: #fff;
}

.stats-label {
  font-size: 12px;
  color: rgba(255,255,255,0.85);
  margin-top: 4px;
}

.stats-divider {
  width: 1px;
  height: 30px;
  background: rgba(255,255,255,0.3);
}

/* Tab栏 */
.tab-bar {
  display: flex;
  background: #fff;
  padding: 8px 16px;
  border-bottom: 1px solid #f0f0f0;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 8px 0;
  border-radius: 8px;
  transition: all 0.2s;
}

.tab-item.active {
  background: #f0f8ff;
}

.tab-icon {
  font-size: 20px;
}

.tab-text {
  font-size: 12px;
  color: #666;
  margin-top: 2px;
}

.tab-item.active .tab-text {
  color: #4facfe;
  font-weight: 500;
}

/* 地图容器 */
.map-container {
  flex: 1;
  position: relative;
}

.map {
  width: 100%;
  height: 100%;
}

/* 地图工具栏 */
.map-toolbar {
  position: absolute;
  right: 12px;
  top: 12px;
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.toolbar-btn {
  width: 40px;
  height: 40px;
  background: #fff;
  border-radius: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.btn-icon {
  font-size: 18px;
}

/* 打卡按钮 */
.checkin-btn {
  position: absolute;
  bottom: 24px;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  gap: 6px;
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
  padding: 12px 28px;
  border-radius: 24px;
  box-shadow: 0 4px 12px rgba(255, 107, 107, 0.4);
}

.checkin-btn.fixed {
  position: fixed;
  bottom: 30px;
}

.checkin-icon {
  font-size: 20px;
}

.checkin-text {
  font-size: 16px;
  font-weight: 600;
  color: #fff;
}

/* 足迹列表 */
.list-container {
  flex: 1;
  position: relative;
}

.footprint-list {
  height: 100%;
  padding: 0 12px;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60px 20px;
}

.empty-icon {
  font-size: 64px;
  margin-bottom: 16px;
}

.empty-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
  margin-bottom: 8px;
}

.empty-desc {
  font-size: 14px;
  color: #999;
  margin-bottom: 24px;
}

.empty-btn {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: #fff;
  font-size: 14px;
  padding: 10px 32px;
  border-radius: 20px;
  border: none;
}

/* 足迹项 */
.footprint-item {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 14px;
  margin: 8px 0;
  border-radius: 12px;
  box-shadow: 0 2px 6px rgba(0,0,0,0.04);
}

.fp-marker {
  width: 40px;
  height: 40px;
  background: #fff0f0;
  border-radius: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.fp-marker-icon {
  font-size: 20px;
}

.fp-content {
  flex: 1;
  margin-left: 12px;
  min-width: 0;
}

.fp-name {
  font-size: 15px;
  font-weight: 500;
  color: #333;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.fp-meta {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-top: 4px;
}

.fp-location {
  font-size: 12px;
  color: #4facfe;
  background: #f0f8ff;
  padding: 2px 8px;
  border-radius: 10px;
}

.fp-time {
  font-size: 11px;
  color: #999;
}

.fp-note {
  font-size: 12px;
  color: #666;
  margin-top: 6px;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.fp-arrow {
  font-size: 18px;
  color: #ccc;
  margin-left: 8px;
}

.list-footer {
  text-align: center;
  padding: 16px;
  font-size: 12px;
  color: #999;
}

/* 成就视图 */
.stats-container {
  flex: 1;
}

.stats-scroll {
  height: 100%;
  padding: 0 12px 100px;
}

.section {
  background: #fff;
  border-radius: 12px;
  padding: 16px;
  margin: 12px 0;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16px;
}

.section-title {
  font-size: 16px;
  font-weight: 600;
  color: #333;
}

.section-sub {
  font-size: 13px;
  color: #4facfe;
}

/* 省份网格 */
.province-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.province-item {
  width: calc(20% - 6.4px);
  padding: 8px 4px;
  background: #f5f5f5;
  border-radius: 8px;
  text-align: center;
}

.province-item.visited {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.province-name {
  font-size: 11px;
  color: #999;
}

.province-item.visited .province-name {
  color: #fff;
  font-weight: 500;
}

/* 数据卡片 */
.data-cards {
  display: flex;
  gap: 12px;
}

.data-card {
  flex: 1;
  background: linear-gradient(135deg, #f5f7fa 0%, #e8ecf1 100%);
  border-radius: 12px;
  padding: 16px 12px;
  text-align: center;
}

.data-icon {
  font-size: 24px;
  display: block;
  margin-bottom: 8px;
}

.data-value {
  font-size: 24px;
  font-weight: 700;
  color: #333;
}

.data-unit {
  font-size: 12px;
  color: #666;
  margin-left: 2px;
}

.data-label {
  font-size: 12px;
  color: #999;
  display: block;
  margin-top: 4px;
}

/* 徽章网格 */
.badge-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
}

.badge-item {
  width: calc(33.33% - 8px);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16px 8px;
  background: #f5f5f5;
  border-radius: 12px;
  opacity: 0.5;
}

.badge-item.unlocked {
  background: linear-gradient(135deg, #fff9e6 0%, #ffe4b5 100%);
  opacity: 1;
}

.badge-icon {
  font-size: 32px;
  margin-bottom: 8px;
}

.badge-name {
  font-size: 11px;
  color: #666;
  text-align: center;
}

.badge-item.unlocked .badge-name {
  color: #ff9500;
  font-weight: 500;
}

/* 分享按钮 */
.share-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: #fff;
  font-size: 15px;
  padding: 14px;
  border-radius: 24px;
  margin: 20px 0;
  border: none;
}

.share-icon {
  font-size: 18px;
}
