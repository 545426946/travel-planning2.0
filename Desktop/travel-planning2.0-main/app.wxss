/**app.wxss**/
page {
  height: 100%;
  background-color: #f5f7fa;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  font-size: 28rpx;
  line-height: 1.5;
  color: #2c3e50;
  box-sizing: border-box;
}

/* 安全区域适配 */
.safe-area-inset-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

/* 通用布局优化 */
.container {
  max-width: 100%;
  overflow-x: hidden;
}

/* 图片加载优化 */
image {
  display: block;
  transition: opacity 0.3s ease;
}

/* 按钮点击效果 */
button::after {
  border: none;
}

button {
  transition: all 0.3s ease;
}

button:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* 全局按钮样式 */
button {
  border-radius: 40rpx;
  font-weight: bold;
}

button::after {
  border: none;
}

/* 全局文本样式 */
.text-primary {
  color: #4A90E2;
}

.text-secondary {
  color: #999;
}

.text-success {
  color: #52c41a;
}

.text-warning {
  color: #faad14;
}

.text-danger {
  color: #ff4d4f;
}

/* 全局卡片样式 */
.card {
  background-color: #ffffff;
  border-radius: 40rpx;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

/* 全局间距样式 */
.mt-20 {
  margin-top: 40rpx;
}

.mt-30 {
  margin-top: 60rpx;
}

.mt-40 {
  margin-top: 80rpx;
}

.mb-20 {
  margin-bottom: 40rpx;
}

.mb-30 {
  margin-bottom: 60rpx;
}

.mb-40 {
  margin-bottom: 80rpx;
}

.p-20 {
  padding: 40rpx;
}

.p-30 {
  padding: 60rpx;
}

.p-40 {
  padding: 80rpx;
}

/* 全局布局样式 */
.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-center {
  align-items: center;
  justify-content: center;
}

.flex-between {
  justify-content: space-between;
}

.flex-around {
  justify-content: space-around;
}

.flex-1 {
  flex: 1;
}

/* 全局文本大小 */
.text-xs {
  font-size: 40rpx;
}

.text-sm {
  font-size: 44rpx;
}

.text-base {
  font-size: 48rpx;
}

.text-lg {
  font-size: 56rpx;
}

.text-xl {
  font-size: 64rpx;
}

.text-2xl {
  font-size: 72rpx;
}

/* 全局字体粗细 */
.font-normal {
  font-weight: normal;
}

.font-medium {
  font-weight: 500;
}

.font-bold {
  font-weight: bold;
}