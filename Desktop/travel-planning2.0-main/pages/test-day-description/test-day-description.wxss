/* 页面容器 */
.container {
  min-height: 100vh;
  background: #F5F7FA;
  padding: 20rpx;
}

/* 头部 */
.header {
  position: relative;
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: white;
  padding: 40rpx 20rpx 30rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}

.back-button {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  font-size: 26rpx;
}

.title {
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  margin-top: 30rpx;
  display: block;
}

/* 行程总览 */
.overview-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  border-left: 6rpx solid #4A90E2;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.overview-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  background: linear-gradient(135deg, #F0F8FF 0%, #E6F3FF 100%);
  padding: 24rpx;
  border-radius: 16rpx;
  border-left: 6rpx solid #4A90E2;
}

/* 日期选择器 */
.day-selector {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.day-tabs {
  display: flex;
  gap: 16rpx;
}

.day-tab {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F5F7FA;
  border-radius: 16rpx;
  transition: all 0.3s;
}

.day-tab.active {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: white;
  transform: scale(1.02);
}

.day-label {
  font-size: 28rpx;
  font-weight: 600;
}

/* 每天行程描述卡片 */
.day-description-card {
  background: white;
  border-radius: 20rpx;
  padding: 0;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(74, 144, 226, 0.1);
  border: 2rpx solid #E8F2FF;
  overflow: hidden;
}

.day-description-header {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  padding: 24rpx 30rpx;
  position: relative;
}

.day-description-header::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  right: 30rpx;
  width: 20rpx;
  height: 20rpx;
  background: #4A90E2;
  transform: rotate(45deg);
  border-radius: 4rpx;
}

.day-description-title {
  color: white;
  font-size: 30rpx;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.day-description-content {
  padding: 30rpx;
  background: white;
}

.day-description-content text {
  font-size: 28rpx;
  color: #555;
  line-height: 1.9;
  letter-spacing: 0.5rpx;
}

/* 详细活动区域 */
.activities-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.activities-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  padding-left: 16rpx;
  border-left: 6rpx solid #FF9500;
}

.activity-card {
  display: flex;
  gap: 20rpx;
  background: #F8F9FA;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  border-left: 6rpx solid #4A90E2;
}

.activity-time-bar {
  flex-shrink: 0;
  width: 100rpx;
}

.time-label {
  display: inline-block;
  padding: 8rpx 16rpx;
  background: #4A90E2;
  color: white;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.activity-content {
  flex: 1;
}

.activity-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.5;
  margin-bottom: 12rpx;
}

.activity-location {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #666;
}

.activity-location .icon {
  font-size: 26rpx;
}

/* 说明区域 */
.info-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  border-top: 4rpx solid #FF9500;
}

.info-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.info-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 16rpx;
  display: block;
}