/* 数据调试页面样式 */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 30rpx;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #666;
}

.section {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  border-left: 6rpx solid #007aff;
  padding-left: 15rpx;
}

.info-grid {
  display: grid;
  gap: 15rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
}

.info-item .label {
  font-size: 28rpx;
  color: #666;
  flex: 1;
}

.info-item .value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  text-align: right;
}

.info-item .value.success {
  color: #28a745;
}

.info-item .value.error {
  color: #dc3545;
}

.plan-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.plan-item {
  background-color: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
  border-left: 4rpx solid #007aff;
}

.plan-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.plan-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  flex: 1;
}

.plan-status {
  font-size: 24rpx;
  color: #007aff;
  background-color: #e7f3ff;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.plan-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-bottom: 10rpx;
}

.plan-dest, .plan-date, .plan-budget {
  font-size: 26rpx;
  color: #666;
}

.plan-meta {
  display: flex;
  gap: 15rpx;
}

.plan-days, .plan-travelers {
  font-size: 24rpx;
  color: #666;
  background-color: #e9ecef;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

.plan-ai {
  font-size: 24rpx;
  color: #28a745;
  background-color: #d4edda;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

.actions {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  margin-bottom: 30rpx;
}

.btn {
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-small {
  height: 60rpx;
  font-size: 26rpx;
  padding: 0 20rpx;
  align-self: flex-end;
}

.btn-primary {
  background-color: #007aff;
  color: white;
}

.btn-success {
  background-color: #28a745;
  color: white;
}

.btn-warning {
  background-color: #ffc107;
  color: #212529;
}

.btn-cancel {
  background-color: #6c757d;
  color: white;
}

.btn[disabled] {
  background-color: #ccc;
  color: #999;
}

.tips {
  background-color: #fff3cd;
  border: 2rpx solid #ffeaa7;
  border-radius: 12rpx;
  padding: 20rpx;
}

.tips-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #856404;
  margin-bottom: 15rpx;
}

.tips-content {
  font-size: 26rpx;
  color: #856404;
  line-height: 1.6;
}

.tips-content text {
  display: block;
  margin-bottom: 8rpx;
}

.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-content {
  background-color: white;
  padding: 40rpx;
  border-radius: 16rpx;
  text-align: center;
}

.loading-text {
  font-size: 28rpx;
  color: #333;
}