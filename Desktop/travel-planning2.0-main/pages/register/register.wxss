/* pages/register/register.wxss */

page {
  height: 100vh;
  background: linear-gradient(135deg,rgb(131, 179, 237) 0%,rgb(131, 179, 237) 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

.container {
  position: relative;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 0 40rpx;
}

/* 顶部装饰 */
.header-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 300rpx;
  overflow: hidden;
  z-index: 1;
}

.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  animation: float 6s ease-in-out infinite;
}

.circle-1 {
  width: 200rpx;
  height: 200rpx;
  top: -100rpx;
  left: -50rpx;
  animation-delay: 0s;
}

.circle-2 {
  width: 150rpx;
  height: 150rpx;
  top: -50rpx;
  right: -30rpx;
  animation-delay: 2s;
}

@keyframes float {
  0%, 100% { transform: translateY(0rpx); }
  50% { transform: translateY(-20rpx); }
}

/* 主要内容区域 */
.main-content {
  flex: 1;
  position: relative;
  z-index: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 80rpx 0;
}

/* Logo 区域 */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.logo {
  width: 140rpx;
  height: 140rpx;
  margin-bottom: 30rpx;
  border-radius: 35rpx;
  background: rgba(255, 255, 255, 0.2);
  padding: 20rpx;
}

.app-name {
  font-size: 52rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 15rpx;
  letter-spacing: 2rpx;
}

.app-slogan {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: center;
  line-height: 1.4;
}

/* 表单样式 */
.register-form {
  margin-bottom: 40rpx;
}

.form-group {
  margin-bottom: 35rpx;
}

.input-wrapper {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 25rpx;
  padding: 0 30rpx;
  height: 90rpx;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.input-wrapper.error {
  border-color: #ff6b6b;
  background: rgba(255, 107, 107, 0.1);
}

.input-wrapper:focus-within {
  border-color: #667eea;
  box-shadow: 0 0 20rpx rgba(102, 126, 234, 0.2);
}

.input-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  color: #667eea;
}

.form-input {
  flex: 1;
  font-size: 28rpx;
  color: #2c3e50;
  height: 100%;
}

.password-toggle {
  font-size: 32rpx;
  color: #667eea;
  padding: 10rpx;
  cursor: pointer;
  opacity: 0.7;
  transition: opacity 0.3s ease;
}

.password-toggle:active {
  opacity: 1;
}

.error-text {
  font-size: 24rpx;
  color: #ff6b6b;
  margin-top: 10rpx;
  margin-left: 30rpx;
}

/* 协议同意 */
.agreement-section {
  margin-bottom: 40rpx;
}

.agreement-row {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
  cursor: pointer;
}

.checkbox {
  width: 30rpx;
  height: 30rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.8);
  border-radius: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 15rpx;
  transition: all 0.3s ease;
}

.checkbox.checked {
  background: #667eea;
  border-color: #667eea;
}

.checkbox.checked text {
  color: white;
  font-size: 18rpx;
  font-weight: bold;
}

.agreement-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

.agreement-links {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-left: 45rpx;
}

.link-text {
  color: #ffd700;
  text-decoration: underline;
  cursor: pointer;
  margin: 0 5rpx;
}

/* 注册按钮 */
.register-btn {
  width: 100%;
  height: 90rpx;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  margin-bottom: 30rpx;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(45deg, #667eea, #6a666e);
  color: rgb(160, 89, 89);
  box-shadow: 0 10rpx 25rpx rgb(156, 156, 156);
}

.register-btn::after {
  display: none;
}

.register-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 5rpx 15rpx rgba(102, 126, 234, 0.3);
}

.register-btn[disabled] {
  opacity: 0.7;
  cursor: not-allowed;
}

/* 登录链接 */
.login-link {
  text-align: center;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 40rpx;
}

.login-text {
  color: #ffd700;
  text-decoration: underline;
  margin-left: 10rpx;
  cursor: pointer;
  font-weight: 500;
}

/* 其他注册方式 */
.other-register {
  margin-top: 40rpx;
}

.divider {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.divider-line {
  flex: 1;
  height: 1rpx;
  background: rgba(255, 255, 255, 0.3);
}

.divider-text {
  margin: 0 20rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

.other-register-options {
  display: flex;
  justify-content: center;
}

.other-register-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 25rpx;
  cursor: pointer;
  transition: all 0.3s ease;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  min-width: 150rpx;
}

.other-register-item:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.2);
}

.other-register-icon {
  font-size: 36rpx;
  margin-bottom: 12rpx;
  opacity: 0.8;
}

.other-register-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 底部装饰 */
.footer-decoration {
  position: relative;
  z-index: 2;
  padding: 30rpx 0;
  text-align: center;
}

.footer-text {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .container {
    padding: 0 30rpx;
  }
  
  .logo-section {
    margin-bottom: 50rpx;
  }
  
  .logo {
    width: 120rpx;
    height: 120rpx;
  }
  
  .app-name {
    font-size: 46rpx;
  }
  
  .app-slogan {
    font-size: 24rpx;
  }
  
  .input-wrapper {
    height: 80rpx;
    padding: 0 25rpx;
  }
  
  .form-input {
    font-size: 26rpx;
  }
  
  .register-btn {
    height: 80rpx;
    font-size: 30rpx;
  }
}